<html>

<head>
    <!--Meta data-->
    <meta name="viewport" content="width=device-width">
    <meta charset="UTF-8">
    <meta name="msapplication-config" content="/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <!--VR Scripts-->
    <script src="https://aframe.io/releases/0.7.0/aframe.min.js"></script>
    <!--Main App Scripts-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://rawgit.com/sitepoint-editors/jsqrcode/master/src/qr_packed.js"></script>
    <script src="js/fontawesome-all.min.js"></script>
    <!--Style Sheets-->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.1/css/bulma.css">
    <link href="https://fonts.googleapis.com/css?family=Short+Stack" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/2.1.19/css/materialdesignicons.min.css">
    <link rel="stylesheet" type="text/css" href="style.css">
    <!--icons-->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/favicon-16x16.png">
    <link rel="manifest" href="/images/icons/manifest.json">
    <link rel="mask-icon" href="/images/icons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/images/icons/favicon.ico">


    <title>Dogecoin Balance</title>
</head>

<body>
    <div id="app">


        <div id="VRDoge">
            <a-scene vr-mode-ui="enabled: true">
                <a-assets>
                    <img id="dogeCoinImg" src="images/dogecoin.png">
                    <img id="sky" src="images/stars.jpg">
                    <img id="moon" src="images/moon.jpg">
                    <img id="moonSurface" src="images/moonSurfacehighRes-min.jpg">
                </a-assets>

                <a-entity id="userCamera" camera="userHeight:1.8" look-controls></a-entity>
                <a-entity id="MotionTracker" tracked-controls="controller: 0; idPrefix: OpenVR">
                </a-entity>

                <a-sphere id="skyBox" material="src: #sky; side: back;" radius="500">
                    <a-animation attribute="rotation" dur="500000" fill="forwards" to="0 360 0" easing="linear" repeat="indefinite"></a-animation>
                </a-sphere>

                <a-sphere id="skyBox" material="src: #moon; side: back; opacity:0.7;" radius="450">
                </a-sphere>

                <a-cylinder id="LargeDogeCoin" rotation='90 0 0' position='0 2 -3' material="src: #dogeCoinImg; color: gold; metalness:0.2;" height="0.1" radius="1">
                    <a-animation attribute="rotation" dur="5000" fill="both" to="90 0 360" easing="linear" repeat="indefinite"></a-animation>



                </a-cylinder>

                <a-text id="VRBalance" align='center' position="0 1.15 -2" rotation="-13 0 0" height="1" width="2" value="CURRENT BALANCE"></a-text>
                <a-text id="VRDogeBalance" align='center' position="0 1 -2" rotation="-13 0 0" v-bind:value="balance + ' DOGE'"></a-text>
                <a-text id="VRAddr" align='center' position="0 0.8 -2" rotation="-13 0 0" height="1" width="2" v-bind:value="visibleAddr"></a-text>

                <a-image id="Ground" height="120" width="240" rotation="90 0 0" position="0 0 0" src="#moonSurface" material="normalMap:#moon;"></a-image>


            </a-scene>
        </div>



        <nav class=" navDoge" role="navigation" aria-label="main navigation">
            <div class="titleDoge">
                <wow>DOGECOIN</wow> <img class="dogeIcon" src="images/dogeIcon.png">
                <wow>BALANCE</wow>
            </div>
        </nav>

        <div class="columns is-mobile">

            <div class="column is-half is-offset-one-quarter has-text-centered dogeCoinImage">
                <img height="200" width="200" v-if="QRisActive" :src="QR" @click="QRisActive = !QRisActive">
                <img height="200" width="200" v-else :src="dogeCoinImg" @click="QRisActive = !QRisActive"></div>
        </div>

        <div class="columns is-mobile">

            <div class="column is-half-desktop is-offset-one-quarter-desktop has-text-centered is-paddingless subtitleDoge">Current Balance
                <br>
                <div v-if="isRaw" @click="isRaw = !isRaw" class="title">{{ balance }} Đ</div>
                <div v-else @click="isRaw = !isRaw" class="title">{{ balanceRaw }} Đ</div>
            </div>
        </div>


        <div class="columns is-mobile">

            <div class="column is-half-desktop is-offset-one-quarter-desktop has-text-centered qrcode-text">
                <input id="input" type=text placeholder="DOGE Public Address" class="qrcode-text" v-model="addr">
                <label class="qrcode-text-btn">
                    <input type=file accept="image/*" capture=environment onclick="return showQRIntro();" onchange="openQRCamera(this);" tabindex=-1>
                </label>
            </div>
        </div>
        <div class="has-text-centered visAddress">{{ visibleAddr }}</div>
        <div class="columns is-mobile">
            <div class="column is-half-desktop is-offset-one-quarter-desktop has-text-centered">
                <br>
                <div class="buttons has-addons is-centered">
                    <button class="button is-large dogeButton" is-warning @click="dogeBalance(); dogeQR(); dogeVisibleAddr(); dogeClearAddr();">Find my Đoge</button>
                </div>
            </div>
        </div>

        <div class="columns is-mobile">
            <div class="column is-half-desktop is-offset-one-quarter-desktop">
                <div class="columns is-mobile">
                    <div class="column is-half has-text-right">
                        <div class="buttons has-addons is-centered">
                            <button class="button is-large dogeButton" is-warning @click="startVR();">VR MODE</button>
                        </div>
                    </div>
                    <div class="column is-half has-text-left">
                        <div class="buttons has-addons is-centered">
                            <button class="button is-large dogeButton" is-warning @click="">AR MODE</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar is-transparent is-fixed-bottom bottomNav">
            <div class="navbar-brand">

                <div class="navbar-item navButton"> <span class="icon"><i class="mdi mdi-google-cardboard"></i></span></i>VR Mode</div>
                <div class="navbar-item navButton"> <span class="icon"><i class="mdi mdi-camera"></i></span></i>AR Mode</div>

                <div class="navbar-item navButton" @click="isActive = true"> <span class="icon"><i class="mdi mdi-help"></i></span></i>About</div>
            </div>
        </nav>
        <!--bottom Nav End-->


<div class="modal" v-bind:class="{ 'is-active': isActive, 'text-danger': hasError }">
  <div class="modal-background" @click="isActive = false"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">About this App</p>
      <button class="delete" aria-label="close" @click="isActive = false"></button>
    </header>
    <section class="modal-card-body">
      <p></p>
    </section>
    <footer class="modal-card-foot">

    </footer>
  </div>
</div>


    </div>
    <!--Close App-->

    <script type="text/javascript" src="app.js"></script>
</body>

</html>