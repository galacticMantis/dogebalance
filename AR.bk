<html>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

<head>
    <title>AR Doge</title>
    <script src="https://aframe.io/releases/0.5.0/aframe.min.js"></script>
    <script src="js/argon.min.js"></script>
    <script src="js/argon-aframe.min.js"></script>
    <script src="js/CSS3DArgonHUD.js"></script>
    <script src="js/CSS3DArgonRenderer.js"></script>
    <script src="js/aframe-look-at-component.js"></script>
</head>

<body>

        <ar-scene vuforiakey="#vuforiakey" vuforiadataset__doge="src:url(datasets/doge.xml);">
            <a-assets>
                <a-asset-item id="vuforiakey" src="key.txt"></a-asset-item>
                <img id="dogeCoinImg" src="images/dogecoin.png">
                <img id="moon" src="images/moonSurfacehighRes-min.jpg">
            </a-assets>
            <ar-frame data-brackets-id="19267" id="frame" trackvisibility="true" visible="false" parent="vuforia.doge.DogeQR" position="0 0 0" rotation="0 0 0" scale="1 1 1" referenceframe="parent:vuforia.doge.DogeQR">

                <a-cylinder id="LargeDogeCoin" rotation="0 -178.64824052179068 0" position="0 0 2.152" material="src:#dogeCoinImg;color:gold;metalness:0.2" height="0.1" radius="1" scale="1 1 1" visible="true" geometry="primitive:cylinder;height:0.1;radius:1">
                    <a-animation attribute="rotation" dur="5000" fill="both" to="0 -178.64824052179068 360" easing="linear" repeat="indefinite"></a-animation>
                </a-cylinder>

                <a-sphere id="theMoon" rotation="76.6679354853961 0 53.32734198596559" position="0 0 0" material="height:0.1;src:#moon;color:white;metalness:0.2" height="0.1" radius="1" scale="1 1 1" visible="true" geometry="primitive:sphere;radius:1">
                    <a-animation data-brackets-id="19270" attribute="rotation" dur="100000" fil l="both" to="0 0 360" easing="linear" repeat="indefinite"></a-animation>
                </a-sphere>

                <a-text id="VRBalance" align="center" position="0.103 -0.925 0.826" rotation="61.822146094615825 0 0" height="1" width="2" value="CURRENT BALANCE" scale="1 1 1" visible="true"></a-text>

                <a-text id="VRDogeBalance" align="center" position="0.155 -1.065 0.666" rotation="64.74423084978302 0 0" value="" scale="1 1 1" visible="true"></a-text>

                <a-text id="VRAddr" align="center" position="0.129 -1.167 0.479" rotation="48.930595704172305 0 0" height="1" width="2" value="" scale="1 1 1" visible="true"></a-text>

            </ar-frame>
        </ar-scene>



    <script>
        var userAdd = localStorage.getItem("userAddr");
        var userBal = localStorage.getItem("userBalance");
        document.getElementById("VRAddr").setAttribute("value", userAdd);
        document.getElementById("VRDogeBalance").setAttribute("value", userBal);
        
    </script>
</body>

</html>